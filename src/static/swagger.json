        "properties": {
          "genuxToken": {
            "type": "string",
            "example": "pomnopiu1poi5poiu1212345"
          }
        }
      },
      "sendPasswordResetEmailRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "tomi@gmail.com"
          }
        }
      },
      "sendPasswordResetEmailResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "tomi@gmail.com"
          }
        }
      },
      "confirmPasswordResetRequest": {
        "type": "object",
        "properties": {
          "oobCode": {
            "type": "string",
            "example": "lkjovin1o234n5"
          },
          "newPassword": {
            "type": "string",
            "example": "securePassword"
          }
        }
      },
      "confirmPasswordResetResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "tomi@gmail.com"
          },
          "requestType": {
            "type": "string",
            "example": "PASSWORD_RESET"
          }
        }
      },
      "changePasswordRequest": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "qoiu21noi75081jnln"
          },
          "password": {
            "type": "string",
            "example": "securePassword"
          }
        }
      },
      "changePasswordResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "qoiu21noi75081jnln"
          },
          "email": {
            "type": "string",
            "example": "tomi@gmail.com"
          },
          "refreshToken": {
            "type": "string",
            "example": "lkj12341injh98nv98"
          },
          "expiresIn": {
            "type": "string",
