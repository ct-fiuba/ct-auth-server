      "sendEmailVerificationRequest": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "qoiu21noi75081jnln"
          }
        }
      },
      "sendEmailVerificationResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "tomi@gmail.com"
          }
        }
      },
      "getUserDataRequest": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "qoiu21noi75081jnln"
          }
        }
      },
      "getUserDataResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "tomi@gmail.com"
          },
          "userId": {
            "type": "string",
            "example": "tRcfmLH7n6082nlDF"
          },
          "emailVerified": {
            "type": "boolean",
            "example": true
          },
          "displayName": {
            "type": "string",
            "example": "John Doe"
          },
          "photoUrl": {
            "type": "string",
            "example": "https://lh5.googleusercontent.com/.../photo.jpg"
          },
          "lastLoginAt": {
            "type": "string",
            "example": "1484628946000"
          },
          "createdAt": {
            "type": "string",
            "example": "1484124142000"
          },
          "DNI": {
            "type": "string",
            "example": "40404040"
          }
        }
      }
    }
  }
}
